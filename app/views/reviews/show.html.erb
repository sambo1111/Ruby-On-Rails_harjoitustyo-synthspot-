

<p>
  <h2><%= @review.topic %>
      <% if current_user == @review.user or current_user.admin? == true %>
        <%= link_to('Edit', edit_review_path(@review), class:"btn btn-primary") %>
        <%= link_to('Delete', review_path(@review), method: :delete, data: {confirm: 'Are you sure?' }, class:"btn btn-danger") %>
      <% end %>
  </h2>
</p>

<p>
  <strong>Writer:</strong> <%= link_to @review.user.username, @review.user %>
</p>

<div class="panel panel-default", style="width: 40%">
  <div class="panel-body">
      <%= @review.body %>
  </div>
</div>

<p>
  <strong>Score:</strong>
</p>

<!-- draw the stars -->
<p>
  <% for i in 1..@review.score %>
    <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
  <% end %>

  <% for i in 1..(10 - @review.score) %>
    <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
  <% end %>
</p>
