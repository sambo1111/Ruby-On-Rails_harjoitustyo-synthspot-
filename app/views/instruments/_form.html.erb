<%= form_for(@instrument) do |f| %>
  <% if @instrument.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@instrument.errors.count, "error") %> prohibited this instrument from being saved:</h2>

      <ul>
      <% @instrument.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :info %><br>
    <%= f.text_area :info %>
  </div>
  <div class="field">
    <%= f.label :image_link %><br>
    <%= f.text_field :image_link %>
  </div>
  <div class="field">
    Manufacturer <br>
    <%= f.select :manufacturer_id, options_from_collection_for_select(@manufacturers, :id, :to_s, selected:@instrument.manufacturer_id) %>
  </div>
  <div class="field">
    Type <br>
    <%= f.select :type_id, options_from_collection_for_select(@types, :id, :to_s, selected:@instrument.type_id) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
