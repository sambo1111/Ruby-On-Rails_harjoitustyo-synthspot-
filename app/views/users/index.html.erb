<h2> List of Users </h2>

<%= form_tag(users_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag(:search_user, params[:search_user], placeholder: "Search Users") %>
  <%= submit_tag "Find" %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
